ARG ENVIRONMENT=production


FROM php:8.4-apache

ARG ENVIRONMENT

COPY docker/php/99-moodle.ini /usr/local/etc/php/conf.d/


RUN apt-get update && apt-get install -y \
    unzip \
    gettext-base \
    libzip-dev \
    libpng-dev \
    libjpeg-dev \
    libpq-dev \
    libicu-dev \
    libxml2-dev \
    postgresql-client \
    && docker-php-ext-configure zip \
    && docker-php-ext-install \
        zip gd pdo_pgsql pgsql intl soap exif \
    && a2enmod rewrite \
    && rm -rf /var/lib/apt/lists/*

    
COPY docker/apache/000-moodle.conf /etc/apache2/sites-available/000-moodle.conf

RUN a2dissite 000-default.conf \
 && a2ensite 000-moodle.conf \
 && a2enmod rewrite

WORKDIR /var/www/html
COPY entrypoint/ .

RUN mkdir -p /var/www/moodledata

# Development-only dependencies
RUN if [ "$ENVIRONMENT" = "development" ]; then \
    apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    vim \
    && pecl install xdebug \
    && docker-php-ext-enable xdebug \
    && rm -rf /var/lib/apt/lists/*; \
    fi

# Production optimizations

RUN if [ "$ENVIRONMENT" = "production" ]; then \
    echo "opcache.validate_timestamps=0" >> /usr/local/etc/php/conf.d/opcache.ini; \
    fi


#Config generator
COPY docker/moodle/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh


ENTRYPOINT ["/entrypoint.sh"]
CMD ["apache2-foreground"]
